            grid-template-columns: 1fr 1fr;
            gap: 20px;
            margin-top: 15px;
        }

        .request-details-vertical {
            display: flex;
            flex-direction: column;
            gap: 20px;
            margin-top: 15px;
        }

        .detail-section {
            background: var(--bg-secondary);
            padding: 15px;
            border-radius: 8px;
            transition: background 0.3s ease;
        }

        .detail-section h4 {
