            gap: 20px;
            margin-bottom: 10px;
        }

        .ip-item {
            background: var(--bg-tertiary);
            padding: 5px 10px;
            border-radius: 5px;
            font-size: 0.9em;
            transition: background 0.3s ease;
        }

        .no-requests {
            text-align: center;
            padding: 60px 20px;
            color: var(--text-secondary);
            font-size: 1.2em;
